<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:background="@color/blackTransparent"
    android:layout_height="match_parent" >
     <FrameLayout
        android:layout_below="@+id/headerayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

       <com.google.ads.AdView
        android:id="@+id/ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:loadAdOnCreate="true"
          android:layout_alignParentBottom="true"
         ads:adUnitId="@string/addmobid"
         ads:refreshInterval="60"
         android:visibility="visible"
         />
    </FrameLayout>
    

    <RelativeLayout
        android:id="@+id/relativetop"
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textview_heading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="aaaaaa"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_image"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativetop"
        android:layout_centerHorizontal="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageview_photo"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:src="@drawable/empty_photo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/relative_image" >

        <TextView
            android:id="@+id/textview_source"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:text="aaaaaa" />

        <TextView
            android:id="@+id/textview_date"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:text="11 22 55" />
    </RelativeLayout>
<ScrollView 
    android:layout_width="fill_parent"
     android:layout_below="@+id/relative_source" 
    android:layout_height="wrap_content" >
    
    <RelativeLayout
        android:id="@+id/relative_description"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
                android:id="@+id/textview_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="aaaaaa    vvvvvvvvvvvvvvvvvvvvvvvvvv" />
    </RelativeLayout>
</ScrollView>
</RelativeLayout>