<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="PopUpAnimationTopToBottom" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_down</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>
    
    <style name="PopUpAnimationBottomToTop" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_up_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_down_from_bottom</item>
    </style>
    
    <style name="BlinkAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/blink</item>
    </style>
    
    <style name="textView_white" parent="@android:style/TextAppearance.Medium.Inverse">
        <item name="android:textColor">@color/White</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="textView_black" parent="textView_white">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>